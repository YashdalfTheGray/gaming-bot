{
  "env": {
    "mocha": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["import"],
  "rules": {
    "class-methods-use-this": ["off"],
    "comma-dangle": ["error", "never"],
    "func-names": ["error", "as-needed"],
    "linebreak-style": ["off"],
    "max-len": ["error", 160],
    "no-console": ["off"],
    "no-param-reassign": ["error"],
    "object-shorthand": ["error", "consistent-as-needed"]
  }
}
